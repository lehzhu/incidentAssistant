<!-- app/views/incidents/index.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="bi bi-list-ul me-2"></i>Incidents</h2>
</div>

<% if @incidents.any? %>
  <div class="row g-4">
    <% @incidents.each do |incident| %>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <h5 class="card-title mb-0"><%= incident.title %></h5>
              <span class="badge <%= incident.active? ? 'bg-primary' : 'bg-success' %>">
                <%= incident.status.humanize %>
              </span>
            </div>
            
            <p class="card-text text-muted small"><%= incident.description %></p>
            
            <div class="row text-center border-top pt-3 mt-3">
              <div class="col-4">
                <div class="h6 mb-0"><%= incident.total_messages %></div>
                <small class="text-muted">Messages</small>
              </div>
              <div class="col-4">
                <div class="h6 mb-0"><%= incident.suggestions.count %></div>
                <small class="text-muted">Suggestions</small>
              </div>
              <div class="col-4">
                <div class="h6 mb-0"><%= distance_of_time_in_words_to_now(incident.created_at) %></div>
                <small class="text-muted">Created</small>
              </div>
            </div>
          </div>
          
          <div class="card-footer bg-transparent">
            <%= link_to "View Details", incident, class: "btn btn-primary btn-sm w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-5">
    <i class="bi bi-inbox display-4 text-muted"></i>
    <h4 class="mt-3 text-muted">No incidents found</h4>
    <p class="text-muted">Run <code>rails db:seed</code> to create sample data.</p>
  </div>
<% end %>